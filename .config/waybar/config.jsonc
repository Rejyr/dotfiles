    "margin-top": 0,
    "margin-bottom": 0,
    "spacing": 0,
    "reload_style_on_change": true,
    "on-sigusr1": "toggle",
    "on-sigusr2": "reload",
    "modules-left": [
        "custom/launcher",
        "clock",
        "niri/workspaces"
