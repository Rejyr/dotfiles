[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Operation = Remove
Target = *

[Action]
Description = Updating application list...
When = PostTransaction
Exec = /bin/sh -c "pacman -Qqen > /home/rejyr/dotfiles/pacman-list; pacman -Qqm > /home/rejyr/dotfiles/aur-list; sudo -u rejyr cargo install --list | awk '/^\w/ { print $1 }' | awk NF=1 > /home/rejyr/dotfiles/cargo-list"
